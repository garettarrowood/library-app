<h1>Contacts</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>E-mail</th>
      <th colspan="2">Message</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each model as |contact|}}
      <tr>
        <th>{{contact.id}}</th>
        <td>{{contact.email}}</td>
        <td colspan="2">{{contact.message}}</td>
        <td><button class="btn btn-warning btn-xs" {{action 'deleteContact' contact}}>Delete</button></td>
      </tr>
    {{/each}}
  </tbody>
</table>